<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9C52B"
    tools:context=".SignUpFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFC107"
        android:theme="@style/Theme.MoHaute.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.MoHaute.PopupOverlay"
        app:subtitle="sub">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="62dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <ImageButton
                android:id="@+id/backClick"
                android:layout_width="43dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#FFC107"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="409dp"
        android:background="@color/mohaute"
        android:layout_height="699dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up to continue"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/email_et"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_draawable"
                android:hint="  Email Address"
                android:textCursorDrawable="@drawable/cursor"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/tvemailhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:textColor="@color/red"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/password_et"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:maxLength="6"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_draawable"
                android:textCursorDrawable="@drawable/cursor"
                android:drawablePadding="10dp"
                android:hint="  Password (min 4 digit)"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/tvPasswordhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:textColor="@color/red"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/confirm_et"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_draawable"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="  Confirm Password"
                android:drawablePadding="10dp"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:maxLength="6"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/tvConfirmPasswordhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:textColor="@color/red"
                android:textSize="12sp" />


            <Button
                android:id="@+id/sign_in_et"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button2_drawable"
                android:drawableRight="@drawable/ic_login"
                android:fontFamily="sans-serif-medium"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView

                android:id="@+id/tvSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="180dp"
                android:clickable="true"
                android:text="Already have an account,Sign in"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>