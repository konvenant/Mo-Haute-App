        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/customerName"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/addition"
        android:drawableLeft="@drawable/ic_person"
        android:ems="10"
        android:hint="Customer's Name"
        android:inputType="textPersonName"
        android:paddingStart="14dp"
        android:textAlignment="center"
        android:textColorHint="#504E4E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeClock2"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/timeClock2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="November 7, 2022 02:20am"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

