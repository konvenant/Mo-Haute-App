        android:id="@+id/thigh"
        android:layout_width="69dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/addition"
        android:ems="10"
        android:hint="inches"
