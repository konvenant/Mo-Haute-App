<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFC107"
        android:theme="@style/Theme.MoHaute.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:text="Update your details"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />



            <ImageButton
                android:id="@+id/goBackClick"
                android:layout_width="43dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#FFC107"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="1259dp"
        android:background="@color/mohaute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="105dp"
                android:layout_height="102dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/image_holder"
                android:saveEnabled="true"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="160dp"
                android:background="@color/white"
                android:drawableStart="@drawable/baseline_create_24"
                android:text="update image"
                android:textColor="@color/mohaute"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="serif-monospace"
                        android:text="Email:"
                        android:textColor="@color/mohaute"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/email_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="SUNDAYCOVENANT@gMAIL.COM"
                        android:textColor="@color/mohaute"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="serif-monospace"
                        android:text="Business Name:"
                        android:textColor="@color/mohaute"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="MO HAUTE BUSINESS"
                        android:textColor="@color/mohaute"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="serif-monospace"
                        android:text="Phone Number:"
                        android:textColor="@color/mohaute"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="09099999999"
                        android:textColor="@color/mohaute"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_drawable"
                        android:clickable="true"
                        android:drawableRight="@drawable/baseline_create_24"
                        android:padding="3dp"
                        android:text="  Update Details  "
                        android:textColor="@color/mohaute"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="500dp">
          <LinearLayout
              android:id="@+id/linear_update"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="50dp"
              android:orientation="vertical"
              android:visibility="gone">


              <EditText
                  android:id="@+id/phone"
                  android:layout_width="300dp"
                  android:layout_height="48dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/edit_draawable"
                  android:drawableStart="@drawable/ic_baseline_phone_24"
                  android:drawablePadding="10dp"
                  android:focusable="true"
                  android:hint="  Phone Number"
                  android:inputType="phone"
                  android:maxLength="11"
                  android:singleLine="true"
                  android:textColor="@color/black"
                  android:textColorHint="@color/gray"
                  android:textCursorDrawable="@drawable/cursor" />

              <TextView
                  android:id="@+id/phonehint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="65dp"
                  android:text=""
                  android:textColor="@color/red"
                  android:textSize="12sp" />

              <EditText
                  android:id="@+id/buiness_name"
                  android:layout_width="300dp"
                  android:layout_height="48dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/edit_draawable"
                  android:drawableStart="@drawable/ic_baseline_person_24"
                  android:drawablePadding="10dp"
                  android:hint="  Business name"
                  android:inputType="textAutoComplete"
                  android:singleLine="true"
                  android:textColor="@color/black"
                  android:textColorHint="@color/gray"
                  android:textCursorDrawable="@drawable/cursor" />

              <TextView
                  android:id="@+id/businessnamehint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="65dp"
                  android:textColor="@color/red"
                  android:textSize="12sp" />

              <EditText
                  android:id="@+id/password"
                  android:layout_width="300dp"
                  android:layout_height="48dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/edit_draawable"
                  android:drawableStart="@drawable/ic_baseline_lock_24"
                  android:drawablePadding="10dp"
                  android:hint="  Password"
                  android:inputType="numberPassword"
                  android:singleLine="true"
                  android:textColor="@color/black"
                  android:textColorHint="@color/gray"
                  android:textCursorDrawable="@drawable/cursor" />

              <TextView
                  android:id="@+id/passwordhint"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="65dp"
                  android:textColor="@color/red"
                  android:textSize="12sp" />


              <Button
                  android:id="@+id/btnUpdate"
                  android:layout_width="200dp"
                  android:layout_height="48dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="30dp"
                  android:layout_marginBottom="20dp"
                  android:background="@drawable/button2_drawable"
                  android:drawableRight="@drawable/ic_login"
                  android:fontFamily="sans-serif-medium"
                  android:text="Update"
                  android:textAlignment="center"
                  android:textColor="@color/white" />
          </LinearLayout>
      </ScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>